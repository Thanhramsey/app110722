    <EditText
        android:id="@+id/denNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denThang"
        android:hint="Đến năm" />

    <TextView
        android:id="@+id/txtSoLuongThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denNam"
        android:text="Số lượng tháng" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtSoLuongThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSoLuongThang"
        android:hint="Nhập số lượng tháng"
        android:inputType="number"
        android:text="1" />


    <Button
        android:id="@+id/btnXuatBienLai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSoLuongThang"
        android:layout_marginTop="0dp"
        android:text="Xuất vé" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnXuatBienLai"
        android:layout_marginTop="0dp"
        android:text="Check thiết bị" />

    <Button
        android:id="@+id/btnInThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCheck"
        android:layout_marginTop="0dp"
        android:text="In thử" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </RelativeLayout>

</RelativeLayout>


