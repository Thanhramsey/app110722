    <TextView
        android:id="@+id/txtInVeGop"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_light"
        android:text="Màn hình in vé gộp có tên, địa chỉ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCompanyInfo"
        android:layout_below="@+id/txtInVeGop"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Cong ty A SaMa" />

    <TextView
        android:layout_below="@+id/txtCompanyInfo"
        android:layout_marginTop="10dp"
        android:id="@+id/txtMenhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mệnh giá:" />

    <Spinner
        android:id="@+id/spMenhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMenhGia" />

    <TextView
        android:id="@+id/txtTenKhachHang"
        android:layout_below="@+id/spMenhGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên khách hàng" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtTenKhachHang"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTenKhachHang"
        android:hint="Nhập tên khách hàng" />

    <TextView
        android:id="@+id/txtDiaChi"
        android:layout_below="@+id/edtTenKhachHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtDiaChi"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDiaChi"
        android:hint="Nhập địa chỉ" />

